// prettier-ignore
{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es2017", "dom"],
    "jsx": "react-jsx",
    "module": "commonjs",
    "rootDir": "./",
    "baseUrl": ".",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": false,
    "noEmit": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "stories",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
  